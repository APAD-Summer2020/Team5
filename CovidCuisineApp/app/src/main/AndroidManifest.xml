<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apadteam5.covidcuisine">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.apadteam5.covidcuisine.Results"
            android:label="@string/title_activity_results"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        
        <activity
            android:name="com.apadteam5.covidcuisine.viewAllCategories"
            android:exported="true" />
        <activity android:name="com.apadteam5.covidcuisine.createPost" android:exported="true"></activity>
        <activity android:name="com.apadteam5.covidcuisine.SpinnerActivity" />
        <activity
            android:name="com.apadteam5.covidcuisine.ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>