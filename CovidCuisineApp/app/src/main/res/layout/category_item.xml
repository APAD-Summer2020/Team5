<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/category_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_android"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/category_textview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_line"
            android:layout_toEndOf="@+id/category_imageview"
            android:layout_toRightOf="@+id/category_imageview" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>